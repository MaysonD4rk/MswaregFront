    <style>
        *{
            border: 0;
            margin: 0;
            padding: 0;
            outline: none !important;
            list-style: none;
            text-decoration: none !important;
        }
        
        body{
            background-color: #fba405;
        }
        .container-training{
            height: 100vh;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        #training-modal{
            
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            align-items: center;
        }
        .paperModal{
            background-image: url('/img/MusclePoints/papelBackground.jpg');
            background-size: 500px 360px;
            height: 500px;
            width: 360px;
            overflow-y: auto;
        }
        

        ul>li{
            font-size: 30px;
            margin-top: 10px;
            font-weight: bold;
        }
        .exercise{
            display: flex;
            align-items: center;
            flex-direction: column;
            width: 100%;
        }
        .exercise>div{
            display: flex;
            width: 100%;
            
            justify-content: space-around;
        }
        .exercise>div button{
            font-size: 30px;
            font-weight: bolder;
            background-color: transparent;
            transition: 0.5s;
            border-bottom: 0 solid transparent;

        }
        .exercise>div button:hover{
            border-bottom: 2px solid black;
        }
        .exercise>div input{
            background-color: transparent;
            border-bottom: 2px solid black;
            text-align: center;
            width: 100px;
        }
        .exercise>div>div{
            display: flex;
            flex-direction: column;
        }
        #training-new-data{
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        #training-new-data>span>button{
            font-size: 50px;
            background-color: transparent;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        #training-new-data>span{
            display: flex;
            flex-direction: row;
            align-items: flex-end;
            border-bottom: 1px solid black;
            font-weight: bold;
        }
        .calcBtn{
            background-color: transparent;
            border: 2px solid transparent;
            border-bottom: 2px solid black;
            transition: 0.3s;
            width: 300px;
            padding: 10px;
            font-weight: bold;
            margin-top: 10px;
        }
        .calcBtn:hover{
            background-color: rgba(255, 255, 255, 0.2);
        }

        #canvasContainer{
            background-color: white;
            height: 400px;
            background-image: url('/img/MusclePoints/papelBackground.jpg');
            background-size: 500px 360px;
            
        }
        #training-list{
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        li{
            display: flex;
            justify-content: center;
        }
        #training-modal>li>input{
            border-bottom: 1px solid black;
            background-color: transparent;
            text-align: center;
            width: 50%;

        }

        .navTrainModal{
            display: flex;
            justify-content: space-around;
            width: 100%;
        }
        .navTrainModal>div{
            flex-grow: 1;
        }
        .navTrainModal>h1{
            text-align: center;
            flex-grow: 1;
        }
        .navTrainModal>button{
            flex-grow: 1;
            font-size: 50px;
            height: 50px;
            font-weight: bolder;
            background-color: transparent;
            line-height: 10px;
        }
        
        .edit-pen{
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 32px;
        }
        #uploadHistory{
            display: none;
        }
    </style>
</head>
<body>
    <a id="download-history" onclick="downloadHistory()"><i style="font-size: 30px; margin: 10px;" class="fa-solid fa-download"></i> Download history</a>
